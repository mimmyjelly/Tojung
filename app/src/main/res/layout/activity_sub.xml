<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/option_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/green"
        android:gravity="end">


        <ImageView
            android:id="@+id/option_image"
            android:layout_width="62dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:src="@drawable/option"/>

        <Button
            android:id="@+id/option_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/jamsil4"
            android:text="옵션"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/green"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:text="보호자 이름"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/guardianName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="보호자 이름을 적어주세요."
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/green"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:text="보호자 전화번호"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/guardianPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="보호자 전화번호를 적어주세요."
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/green"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:text="기상 시간"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/wakeUpTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="기상 시간을 적어주세요."
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/green"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:text="취침 시간"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/sleepTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="취침 시간을 알려주세요"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="12dp"/>

    <Button
        android:id="@+id/savebt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    </LinearLayout>